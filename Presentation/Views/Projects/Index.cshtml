@model List<Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="projects-container">
    <div class="projects-header">
        <h1>@ViewData["Title"]</h1>
        <button type="button" data-type="modal" data-target="#addProjectModal" class="btn btn-add">Add Project</button>
    </div>
    @await Html.PartialAsync("Partials/Components/_SortBar") 

    <div class="projects">
        @if (Model != null && Model.Any())
        {
            foreach (var project in Model)
            {
                @await Html.PartialAsync("Partials/Components/_ProjectCard", project)
            }
        }
        else
        {
            <h1>No Projects</h1>
        }
    </div>

</div>

@await Html.PartialAsync("Partials/Modals/_AddProjectModal")
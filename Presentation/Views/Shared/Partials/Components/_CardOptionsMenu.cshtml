@model string

<div class="options-menu-container">
    <div id="optionsMenuIcon" data-type="dropdown" data-target="#optionsMenuDropdown-@Model" class="options-menu-icon"><img src="~/Images/ButtonImages/two_dots.svg" alt="Card Menu Button Image" /></div>
</div>

<div id="optionsMenuDropdown-@Model" class="options-dropdown-container card">
    <div class="option-buttons">
        <button class="edit-option">
            <i class="bi bi-pencil-fill"></i>
            Edit
        </button>

        <button class="add-member-option">
            <i class="bi bi-person-plus-fill"></i>
            Add Member
        </button>

        <div class="options-divider"></div>

        <form asp-controller="Projects" asp-action="RemoveProject" method="post" novalidate>
            <input type="hidden" name="id" value="@Model" />
            <button type="submit" class="delete-option">
                <i class="bi bi-trash"></i>
                Delete Project
            </button>
        </form>
    </div>

</div>

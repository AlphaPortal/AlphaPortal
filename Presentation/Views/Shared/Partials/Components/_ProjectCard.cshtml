@model Project

<div id="projectCard" class="card">
    <div class="project-card-header">
        <img class="project-image" src="~/Images/CardImages/card-image1.svg" alt="Card Image" />

        <span class="project-title">@Model.Title</span>
        <span class="project-description">@Model.Description</span>

        <button class="project-menu-btn">
            <img src="~/Images/ButtonImages/two_dots.svg" alt="Card Menu Button Image" />
        </button>
    </div>
    <main class="card-body">
        <p>@Model.Message</p>
    </main>
    <footer class="card-footer">
        <span class="time-left">
            <i class="bi bi-clock-fill"></i>
            @Model.TimeLeft
            </span>

        <img class="project-card-profile-image" src="~/Images/Avatars/avatar.svg" />
        <img class="project-card-profile-image" src="~/Images/Avatars/avatar.svg" />
        <img class="project-card-profile-image" src="~/Images/Avatars/avatar.svg" />
    </footer>
</div>
@model AddProjectViewModel

<div id="addProjectModal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Project</h3>
            <button type="button" data-type="close" data-target="#addProjectModal" class="btn btn-close"></button>
        </div>

        <div class="card-body">
            <form asp-controller="Project" asp-action="AddProject" method="post" enctype="multipart/form-data" data-target="#addProjectModal">

                <div class="image-preview-container">
                    <div class="image-border">
                        <div id="circle-container" class="circle-image">
                            <i class="bi bi-camera-fill"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                     <label asp-for="ProjectName"></label>
                     <input asp-for="ProjectName" />
                    
                </div>

                <div class="form-group">
                    <select asp-for="ClientId" asp-items="Model.CLients">
                        <option value="" selected hidden disabled>Choose Client</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                        <div class="wysiwyg-container">
                        <textarea id="add-project-description" asp-for="Description"></textarea>
                        <div id="add-project-description-editor" class="wysiwyg-editor"></div>
                        <div id="add-project-description-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="date-group">
                    <div class="date-label">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate"/>
                    </div>
                    <div class="date-label">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate"/>
                    </div>
                </div>

                <div class="add-project-members-container">
                   <label>Members</label>
                   <div class="add-project-members-group">

                        <div class="add-project-members">

                            <div class="add-project-member">
                                <img src="~/Images/Avatars/avatar.svg" />
                                <span>Björn Åhström</span>
                                <button class="btn btn-close"></button>
                            </div>

                            <div class="add-project-member">
                                <img src="~/Images/Avatars/avatar_5.svg" />
                                <span>Desieé Åhström</span>
                                <button class="btn btn-close"></button>
                            </div>

                        </div>

                        <button>
                            <i class="bi bi-search"></i>
                        </button>
                   </div>
                </div>

                <div class="budget-group">
                    <label>Budget</label>
                   <div class="budget-input">
                        <i class="bi bi-currency-dollar"></i>
                        <input placeholder="0" />
                   </div>
                </div>

                <button type="submit" class="btn btn-submit">Create</button>

            </form>
        </div>
    </div>
</div>

<script>
    initWysiwygEditor("#add-project-description-editor", "#add-project-description-toolbar", "#add-project-description", "@Html.Raw(Model?.Description ?? "")");

</script>